{% extends 'layout.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
{% endblock %}
{% block body %}
    {% include 'includes/navbar.twig' %}

    <div class="container col-md-4 mt-4 mb-3"><h3>Login</h3></div>
    <div class="container col-md-4">
        <form method="post">
            <div class="form-group">
                <input type="text" name="username" class="form-control" placeholder="Choose your login">
            </div>
            <div class="form-group">
                <input type="password" name="password" class="form-control" placeholder="password">
            </div>
            <button type="submit" class="btn btn-outline-dark">Login</button>
            <a href="/register" class="btn btn-dark">Register</a>
        </form>
    </div>
{% endblock %}